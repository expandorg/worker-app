{
  "setupFiles": [
    "<rootDir>/scripts/jest.setup.js"
  ],
  "transformIgnorePatterns": [
    "/node_modules/"
  ],
  "moduleDirectories": [
    "src",
    "node_modules"
  ],
  "transform": {
    "^.+\\.js$": "babel-jest",
    "\\.js$": "babel-jest"
  },
  "moduleNameMapper": {
    "^.+(\\.module){0,1}\\.styl": "<rootDir>/scripts/styleMock.js"
  },
  "testPathIgnorePatterns": [
    "/node_modules/"
  ]
}
