@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';
@import '~@expandorg/uikit/size';

.container
  box-sizing: border-box;
  padding: 50px 0

  @media(max-width: breakpoint-mobile-sm)
    padding: 20px 18px

.panel
  box-sizing: border-box;
  padding: 30px 30px
  margin: 0 auto 50px auto
  width: 512px
  box-shadow: none
  border: 1px solid color-heavy-blue
  border-radius: 20px

  @media(max-width: breakpoint-mobile-sm)
    width: 100%
    margin: 0 0 20px 0
    padding: 30px 20px

.title
  color: color-back
  font(h2-title)

.actions
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 30px

.logout
  line-height: 38px
  height 40px
  border-radius: 2px

  @media(max-width: breakpoint-mobile-sm)
    width: 100%
