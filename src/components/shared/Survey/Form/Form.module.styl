@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/size'

.container
  box-sizing: border-box
  width: 100%
  height: 100%

  padding: 0 32px 32px

  display flex
  flex-direction: column

.content
  flex-grow: 1
  display: flex
  justify-content: center


.form
  box-sizing: border-box

  margin-top: 20vh

  max-width: 550px
  min-width: 550px


.title
  font(h2-bold)
  color: color-light-blue
  text-align: center
  margin-bottom: 30px

.actions
  display: flex
  justify-content: flex-end

  > *
    margin-left: 24px
    border-radius: 5px
    height 32px
    line-height 32px

.back
  background-color: color-white;

  &:hover
    background-color: color-white;


.field
  :global(.gem-autocomplete-suggestions)
    max-height: 300px

  :global(.gem-autocomplete-multi .gem-autocomplete-suggestion)
    position relative
    padding-right: 36px

    &:before
      position absolute

      content: ""
      height 14px
      width: 14px

      right 22px
      top: calc(50% - 7px)
      background-image: url(./add.svg)

