@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/size'

.container
  box-sizing: border-box
  display: flex
  align-items: center
  min-height: 'calc(100vh - %s)' % s-header-height

.panel
  margin: 130px auto 0 auto
  width 600px

.title
  font(h2-bold, 500)
  color: color-light-blue
  text-align: center


.error
  margin-top: 10px
  color: color-yellow

.actions
  display: flex
  justify-content: flex-end
  margin-top: 30px

.submit
  height: 40px
  line-height: 38px
  border-radius: 2px
  width: auto
  padding: 0 20px

.result
  margin-top: 30px
  text-align: center

.message
  font(body)
  color: color-light-blue

.link
  display inline-block
  margin-top: 30px
  font(body-bold)
  text-decoration: underline
  color: color-heavy-blue
